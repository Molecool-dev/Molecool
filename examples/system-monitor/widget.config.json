{
  "id": "system-monitor-widget",
  "name": "system-monitor",
  "displayName": "System Monitor Widget",
  "version": "1.0.0",
  "description": "A system monitor widget that displays CPU and memory usage",
  "author": {
    "name": "Molecool Team",
    "email": "team@Molecool.dev"
  },
  "permissions": {
    "systemInfo": {
      "cpu": true,
      "memory": true
    },
    "network": {
      "enabled": false
    }
  },
  "sizes": {
    "default": {
      "width": 300,
      "height": 250
    },
    "min": {
      "width": 250,
      "height": 200
    },
    "max": {
      "width": 400,
      "height": 300
    }
  },
  "entryPoint": "dist/index.html"
}
