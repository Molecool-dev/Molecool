{
  "id": "clock-widget",
  "name": "clock",
  "displayName": "Clock Widget",
  "version": "1.0.0",
  "description": "A simple clock widget that displays current time and date",
  "author": {
    "name": "Molecool Team",
    "email": "team@Molecool.dev"
  },
  "permissions": {
    "systemInfo": {
      "cpu": false,
      "memory": false
    },
    "network": {
      "enabled": false
    }
  },
  "sizes": {
    "default": {
      "width": 300,
      "height": 150
    },
    "min": {
      "width": 250,
      "height": 120
    },
    "max": {
      "width": 400,
      "height": 200
    }
  },
  "entryPoint": "dist/index.html"
}
