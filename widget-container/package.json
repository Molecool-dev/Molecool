{
  "name": "Molecool-widget-container",
  "version": "1.0.0",
  "description": "Molecool Desktop Widget Platform - Widget Container",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build && electron .",
    "build": "node scripts/build.js",
    "build:old": "tsc && npm run copy-renderer",
    "copy-renderer": "xcopy /E /I /Y src\\renderer dist\\renderer",
    "clean": "rimraf dist dist-build",
    "package": "npm run build && node scripts/package.js",
    "package:win": "npm run build && node scripts/package.js win",
    "package:mac": "npm run build && node scripts/package.js mac",
    "package:verify": "node scripts/verify-package-config.js",
    "icons": "node scripts/generate-icons.js",
    "test": "jest",
    "test:manual": "node scripts/prepare-manual-testing.js"
  },
  "keywords": [
    "electron",
    "widget",
    "desktop"
  ],
  "author": "Molecool Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/uuid": "^10.0.0",
    "adm-zip": "^0.5.16",
    "electron-store": "^8.1.0",
    "uuid": "^13.0.0"
  },
  "build": {
    "appId": "com.Molecool.widget-platform",
    "productName": "Molecool",
    "copyright": "Copyright Â© 2024 Molecool Team",
    "protocols": [
      {
        "name": "Molecool Widget Protocol",
        "schemes": [
          "widget"
        ]
      }
    ],
    "directories": {
      "output": "dist-build",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "examples",
        "to": "examples",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Molecool Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Molecool",
      "perMachine": false,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "assets/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
